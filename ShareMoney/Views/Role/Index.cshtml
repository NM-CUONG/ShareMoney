@using Service.RoleService.Dto;
@using X.PagedList;
@using Web.Models.Common;
@model IPagedList<RoleDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // breadcrumb
    ViewData["Breadcrumbs"] = new List<Breadcrumb>
    {
        new Breadcrumb { Title = "Trang chủ", Url = "/" },
        new Breadcrumb { Title = "Quản lý vai trò", Url = null, IsActive = true }
    };

}

<div class="groupBtn">
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <i class="bi bi-search"></i>
        Tìm kiếm
    </a>
    <a class="btn btn-success" role="button" onclick="CreateAction('@Url.Action("Create", "Role")')">
        <i class="bi bi-plus-lg"></i>
        Thêm mới
    </a>
</div>



@Html.Partial("_Search");

<div id="viewData">
    @{
        Html.RenderPartial("_ViewData", Model);
    }
</div>

